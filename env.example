# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ADMIN_IDS=123456789,987654321  # Chat IDs للمشرفين مفصولة بفواصل
TELEGRAM_LOGS_CHAT_ID=-1001234567890     # Chat ID لمجموعة/قناة اللوجات

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=sqlite://./database/whatsapp_bot.db
DB_LOGGING=false                         # true/false لتسليم استعلامات قاعدة البيانات

# ============================================
# WHATSAPP SESSIONS CONFIGURATION
# ============================================
WHATSAPP_SESSION_DIR=./sessions
WHATSAPP_SESSION_TIMEOUT=300000          # المهلة بالمللي ثانية (5 دقائق)
WHATSAPP_QR_TIMEOUT=60000                # وقت انتهاء QR بالمللي ثانية (1 دقيقة)
WHATSAPP_MAX_SESSIONS=5                  # الحد الأقصى للجلسات المتزامنة

# ============================================
# PUPPETEER / BROWSER CONFIGURATION
# ============================================
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser  # المسار على Render
BROWSER_HEADLESS=true                    # true للخادم، false للتطوير المحلي
BROWSER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage,--disable-accelerated-2d-canvas,--disable-gpu,--window-size=1920x1080

# ============================================
# AUTO-POSTING CONFIGURATION
# ============================================
AUTO_POST_INTERVAL=1000                  # الفترة بين المجموعات بالمللي ثانية (1 ثانية)
AUTO_POST_RETRY_DELAY=5000               # التأخير عند إعادة المحاولة بالمللي ثانية
AUTO_POST_MAX_RETRIES=3                  # الحد الأقصى لمحاولات إعادة الإرسال

# ============================================
# AUTO-JOINING CONFIGURATION
# ============================================
AUTO_JOIN_ENABLED=true                   # تفعيل الانضمام التلقائي
AUTO_JOIN_CHECK_INTERVAL=30000           # فحص الرسائل الجديدة كل 30 ثانية
AUTO_JOIN_DELAY_BETWEEN=2000             # تأخير بين محاولات الانضمام

# ============================================
# LINK COLLECTION CONFIGURATION
# ============================================
LINK_CHECK_INTERVAL=60000                # فحص الروابط كل 60 ثانية
LINK_CATEGORIES=whatsapp,telegram,website,other  # فئات الروابط

# ============================================
# SERVER / API CONFIGURATION
# ============================================
SERVER_PORT=3000                         # بورت سيرفر Express الداخلي
API_SECRET_KEY=your_api_secret_key_here  # مفتاح سري لواجهة API
ENCRYPTION_KEY=32_byte_encryption_key_!@#  # مفتاح تشفير الجلسات (32 حرف)

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=info                           # debug, info, warn, error
LOG_TO_FILE=true                         # حفظ اللوجات في ملف
LOG_FILE_PATH=./logs/bot.log             # مسار ملف اللوجات

# ============================================
# RENDER SPECIFIC (للنسخ على Render.com)
# ============================================
RENDER=true                              # ضع true عند النشر على Render
WEB_CONCURRENCY=1                        # عدد عمال Node.js
NODE_ENV=production                      # بيئة التشغيل
